<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".activities.auth.AuthActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/coda"
        android:text="Welcome to Sawo Community"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


        <ImageView
            android:id="@+id/ic_icon"
            android:layout_width="220dp"
            android:layout_height="160dp"
            android:src="@drawable/ic_logo"
            app:layout_constraintTop_toBottomOf="@+id/title"
            app:layout_constraintStart_toStartOf="@id/title"
            app:layout_constraintEnd_toEndOf="@id/title"
            android:layout_marginTop="32dp"
            />

        <Button
            android:id="@+id/loginBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:backgroundTint="#FCDE59"
            android:paddingHorizontal="24dp"
            android:paddingVertical="8dp"
            android:text="Passwordless Login"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:fontFamily="@font/coda"
            app:layout_constraintTop_toBottomOf="@id/ic_icon"
            app:layout_constraintStart_toStartOf="@id/ic_icon"
            app:layout_constraintEnd_toEndOf="@id/ic_icon"
            app:layout_constraintBottom_toBottomOf="parent"
            />

</androidx.constraintlayout.widget.ConstraintLayout>